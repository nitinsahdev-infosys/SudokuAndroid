<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/InputPanelValue01"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/first"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />

        <Button
            android:id="@+id/InputPanelValue02"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/second"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />

        <Button
            android:id="@+id/InputPanelValue03"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/third"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />

        <Button
            android:id="@+id/InputPanelValue04"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/fourth"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />

        <Button
            android:id="@+id/InputPanelValue05"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/fifth"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/InputPanelValue06"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/sixth"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />

        <Button
            android:id="@+id/InputPanelValue07"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/seventh"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />

        <Button
            android:id="@+id/InputPanelValue08"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/eight"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />

        <Button
            android:id="@+id/InputPanelValue09"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/ninth"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />

        <Button
            android:id="@+id/InputPanelClear"
            android:layout_width="@dimen/inputPanel_textView_width"
            android:layout_height="@dimen/inputPanel_textView_height"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onInputPanelClicked"
            android:text="@string/clear"
            android:textColor="#000000"
            android:textSize="@dimen/inputPanel_tv_size" />
    </LinearLayout>

</LinearLayout>